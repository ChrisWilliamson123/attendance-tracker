import argparse

def description():
  return 'Backend server for the attendence tracker.'

parser = argparse.ArgumentParser(description=description())
parser.add_argument('--hostname', metavar='h', type=str,
                    help='The ip/website to serve on', default='localhost')
parser.add_argument('--port', metavar='p', type=int
                    help='The port to serve on', default=8080)

args = parser.parse_args()
print(args.accumulate(args.integers))
